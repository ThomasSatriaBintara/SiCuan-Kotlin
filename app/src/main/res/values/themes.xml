<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SiCuan" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.SiCuan" parent="Base.Theme.SiCuan" />

    <!-- Gunakan jika belum ada -->
    <style name="CustomCalendar" parent="Widget.MaterialComponents.MaterialCalendar.Fullscreen">
        <!-- Kustom gaya jika dibutuhkan -->
        <item name="materialCalendarStyle">@style/CustomCalendar</item>
    </style>

    <style name="CustomDateRangePickerTheme" parent="ThemeOverlay.Material3.MaterialCalendar">
        <item name="materialCalendarStyle">@style/CustomCalendarStyle</item>
        <item name="materialCalendarTheme">@style/CustomCalendarTheme</item>
    </style>

    <style name="CustomCalendarStyle" parent="Widget.Material3.MaterialCalendar">
        <item name="daySelectedStyle">@style/CustomSelectedDay</item>
        <item name="rangeFillColor">@color/bar</item>
    </style>

    <style name="CustomSelectedDay" parent="Widget.Material3.MaterialCalendar.Day.Selected">
        <item name="itemFillColor">@color/bar</item>
        <item name="itemTextColor">@android:color/white</item>
    </style>

    <style name="CustomCalendarTheme" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/bar</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSurface">@color/white</item>
    </style>


</resources>