<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_card_jual"
    android:padding="12dp"
    android:layout_marginBottom="8dp"
    android:backgroundTint="#E2FFFD">

    <TextView
        android:id="@+id/tvNamaMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Es Teh"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"/>

    <TextView
        android:id="@+id/tvKeuntungan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Keuntungan : 50%"
        android:paddingBottom="5dp"/>

    <TextView
        android:id="@+id/tvHargaJual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Harga Jual : Rp 3000"
        android:paddingBottom="5dp"/>

</LinearLayout>
