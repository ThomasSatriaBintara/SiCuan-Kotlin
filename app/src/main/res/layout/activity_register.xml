<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/bg_gradient"
    tools:context=".logreg.RegisterActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="80dp"
        app:cardCornerRadius="50dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="32dp">

            <!-- Title -->
            <TextView
                android:id="@+id/tvDaftarAkun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Daftar Akun"
                android:textColor="#3161A3"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/tvNamaPengguna" />

            <!-- Nama Pengguna Label -->
            <TextView
                android:id="@+id/tvNamaPengguna"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Pengguna"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:layout_marginTop="10dp"
                android:paddingBottom="5dp"
                app:layout_constraintTop_toBottomOf="@+id/tvDaftarAkun"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Nama Pengguna EditText -->
            <EditText
                android:id="@+id/inputUsername"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bg_edittext"
                android:hint="Masukkan nama anda"
                android:paddingHorizontal="16dp"
                android:textColor="@color/black"
                android:textColorHint="@color/gray_hint"
                app:layout_constraintTop_toBottomOf="@+id/tvNamaPengguna"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/tvEmail" />

            <!-- Email Label -->
            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:layout_marginTop="10dp"
                android:paddingBottom="5dp"
                app:layout_constraintTop_toBottomOf="@+id/inputUsername"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Email EditText -->
            <EditText
                android:id="@+id/inputEmail"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bg_edittext"
                android:hint="Masukkan email anda"
                android:inputType="textEmailAddress"
                android:paddingHorizontal="16dp"
                android:textColor="@color/black"
                android:textColorHint="@color/gray_hint"
                app:layout_constraintTop_toBottomOf="@+id/tvEmail"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/tvPassword" />

            <!-- Password Label -->
            <TextView
                android:id="@+id/tvPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:layout_marginTop="10dp"
                android:paddingBottom="5dp"
                app:layout_constraintTop_toBottomOf="@+id/inputEmail"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Password EditText with ImageButton -->
            <LinearLayout
                android:id="@+id/layoutPassword"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:background="@drawable/bg_edittext"
                android:padding="4dp"
                app:layout_constraintTop_toBottomOf="@+id/tvPassword"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/tvKonfirmasiPassword">

                <EditText
                    android:id="@+id/inputPassword"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="Masukkan password"
                    android:inputType="textPassword"
                    android:paddingHorizontal="16dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray_hint" />

                <ImageButton
                    android:id="@+id/showPasswordBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:contentDescription="Show Password"
                    android:padding="18dp"
                    android:src="@drawable/ic_eye" />
            </LinearLayout>

            <!-- Konfirmasi Password Label -->
            <TextView
                android:id="@+id/tvKonfirmasiPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Konfirmasi Password"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:layout_marginTop="10dp"
                android:paddingBottom="5dp"
                app:layout_constraintTop_toBottomOf="@+id/layoutPassword"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Konfirmasi Password EditText with ImageButton -->
            <LinearLayout
                android:id="@+id/layoutKonfirmasiPassword"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:background="@drawable/bg_edittext"
                android:padding="4dp"
                app:layout_constraintTop_toBottomOf="@+id/tvKonfirmasiPassword"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/tvNamaUsaha">

                <EditText
                    android:id="@+id/REinputPassword"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="Masukkan ulang password"
                    android:inputType="textPassword"
                    android:paddingHorizontal="16dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray_hint" />

                <ImageButton
                    android:id="@+id/showConfirmPasswordBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:contentDescription="Show Confirm Password"
                    android:padding="18dp"
                    android:src="@drawable/ic_eye" />
            </LinearLayout>

            <!-- Nama Usaha Label -->
            <TextView
                android:id="@+id/tvNamaUsaha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Usaha"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:layout_marginTop="10dp"
                android:paddingBottom="5dp"
                app:layout_constraintTop_toBottomOf="@+id/layoutKonfirmasiPassword"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Nama Usaha EditText -->
            <EditText
                android:id="@+id/inputNamaUsaha"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/bg_edittext"
                android:hint="Masukkan nama usaha anda"
                android:paddingHorizontal="16dp"
                android:textColor="@color/black"
                android:textColorHint="@color/gray_hint"
                app:layout_constraintTop_toBottomOf="@+id/tvNamaUsaha"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/btnRegister" />

            <!-- Register Button -->
            <Button
                android:id="@+id/btnRegister"
                android:layout_width="180dp"
                android:layout_height="57dp"
                android:backgroundTint="#00BCD4"
                android:elevation="4dp"
                android:text="Daftar"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/inputNamaUsaha"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/tvMasukLayout" />

            <!-- Login Text Layout -->
            <LinearLayout
                android:id="@+id/tvMasukLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/btnRegister"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sudah Punya Akun?"
                    android:textColor="#333"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvMasuk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Masuk"
                    android:textColor="#0066FF"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>