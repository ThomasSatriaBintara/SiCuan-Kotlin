<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8FBFF">

    <!-- Wave header -->
    <ImageView
        android:id="@+id/waveBackground"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_wave"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/transparent"
        app:navigationIcon="@drawable/ic_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp" />

    <!-- Judul konten -->
    <TextView
        android:id="@+id/tvPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textSize="30sp"
        android:textColor="#3E4A89"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/waveBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Email Label -->
    <TextView
        android:id="@+id/tvNewPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Password Baru"
        android:textColor="#000000"
        android:textSize="20dp"
        android:paddingLeft="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvPassword" />

    <EditText
        android:id="@+id/etPasswordBaru"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Masukkan Password Baru"
        android:inputType="textPassword"
        android:background="@drawable/bg_card_jual"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvNewPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"
        android:textColor="#000000"/>

    <!-- Email Label -->
    <TextView
        android:id="@+id/tvConfirmPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Konfirmasi Password Baru"
        android:textColor="#000000"
        android:textSize="20dp"
        android:paddingLeft="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etPasswordBaru" />

    <EditText
        android:id="@+id/etConfirmPasswordBaru"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Masukkan Konfirmasi Password Baru"
        android:inputType="textPassword"
        android:background="@drawable/bg_card_jual"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvConfirmPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"
        android:textColor="#000000"/>

    <Button
        android:id="@+id/btnUbahPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="SIMPAN"
        android:backgroundTint="#2C9A7F"
        app:layout_constraintTop_toBottomOf="@id/etConfirmPasswordBaru"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"/>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center"
        app:layout_constraintTop_toBottomOf="@id/btnUbahPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
