<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp"
    android:background="@android:color/white">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_card"
        android:padding="16dp"
        android:layout_gravity="center">

        <EditText
            android:id="@+id/etNamaBahan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nama Bahan"
            android:enabled="false"
            android:background="@drawable/bg_edittext"
            android:padding="12dp"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/etJumlah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Jumlah Bahan"
            android:inputType="number"
            android:background="@drawable/bg_edittext"
            android:padding="12dp"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/etMinimumStok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Minimum Stok"
            android:inputType="number"
            android:background="@drawable/bg_edittext"
            android:padding="12dp"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jenis Transaksi"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginBottom="4dp" />

        <Spinner
            android:id="@+id/spinnerTransaksi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Keterangan (Opsional)"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/etKeterangan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="2"
            android:gravity="top"
            android:hint="Contoh: pembelian bahan di pasar"
            android:inputType="textMultiLine"
            android:background="@drawable/bg_card"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/btnBatal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="BATAL"
                android:backgroundTint="#888888"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnSimpan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="SIMPAN"
                android:backgroundTint="#2C9A7F"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
