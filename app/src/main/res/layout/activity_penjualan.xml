<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0FFFF">

    <!-- Header Wave -->
    <ImageView
        android:id="@+id/imgWave"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_wave"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/transparent"
        app:navigationIcon="@drawable/ic_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Judul -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Penjualan"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#1D3557"
        app:layout_constraintTop_toBottomOf="@id/imgWave"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Tanggal transaksi -->
    <LinearLayout
        android:id="@+id/layoutTanggal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/etTanggalAwal"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:hint="Dari"
            android:background="@drawable/bg_edittext"
            android:drawableStart="@drawable/ic_camera"
            android:focusable="false"
            android:padding="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  -  "
            android:textSize="18sp"
            android:textColor="#000"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/etTanggalAkhir"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:hint="Sampai"
            android:background="@drawable/bg_edittext"
            android:drawableStart="@drawable/ic_camera"
            android:focusable="false"
            android:padding="10dp"/>
    </LinearLayout>

    <!-- Container transaksi (RecyclerView) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPenjualan"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/layoutTanggal"
        app:layout_constraintBottom_toTopOf="@+id/btnTambah"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp"/>

    <!-- Tombol tambah -->
    <Button
        android:id="@+id/btnTambah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+ Tambah Penjualan"
        android:backgroundTint="#295C69"
        android:textColor="@android:color/white"
        android:drawableStart="@drawable/ic_add"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="12dp"/>

    <!-- Bottom Navigation -->
    <include
        android:id="@+id/bottom_navigation"
        layout="@layout/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
