<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0FFFF">

    <!-- Header Wave -->
    <ImageView
        android:id="@+id/imgWave"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_wave"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/transparent"
        app:navigationIcon="@drawable/ic_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp" />

    <!-- Judul -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Penjualan"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#1D3557"
        app:layout_constraintTop_toBottomOf="@id/imgWave"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Label Tanggal Transaksi -->
    <TextView
        android:id="@+id/tvTanggalLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tanggal Transaksi"
        android:textSize="20sp"
        android:textColor="#1D3557"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp" />

    <!-- Tanggal transaksi -->
    <LinearLayout
        android:id="@+id/layoutTanggal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tvTanggalLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/etTanggalAwal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="17 Juni 2025"
            android:background="@drawable/bg_calendar"
            android:drawableStart="@drawable/ic_calendar"
            android:focusable="false"
            android:padding="12dp"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginEnd="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â€”"
            android:textSize="24sp"
            android:textColor="#31709D"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginHorizontal="8dp"/>

        <EditText
            android:id="@+id/etTanggalAkhir"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="17 Juni 2025"
            android:background="@drawable/bg_calendar"
            android:drawableStart="@drawable/ic_calendar"
            android:focusable="false"
            android:padding="12dp"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Container transaksi (RecyclerView dengan GridLayoutManager) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPenjualan"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/layoutTanggal"
        app:layout_constraintBottom_toTopOf="@+id/btnTambah"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp"
        android:clipToPadding="false"/>

    <!-- Placeholder untuk saat belum ada data -->
    <LinearLayout
        android:id="@+id/llNoData"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/layoutTanggal"
        app:layout_constraintBottom_toTopOf="@id/btnTambah"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_empty_penjualan"
            android:contentDescription="No data graph" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Belum ada data penjualan hari ini"
            android:textColor="#1D3557"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yuk, mulai catat penjualan pertamamu!"
            android:textColor="#1D3557"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <Button
        android:id="@+id/btnTambah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+ Tambah Penjualan"
        android:backgroundTint="#295C69"
        android:textColor="@android:color/white"
        android:drawableStart="@drawable/ic_add"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="12dp"/>

    <include
        android:id="@+id/bottom_navigation"
        layout="@layout/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>