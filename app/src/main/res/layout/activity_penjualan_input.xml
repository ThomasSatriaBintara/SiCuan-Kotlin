<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0FFFF"
    tools:context=".dashboard.penjualan.TambahPenjualanActivity">

    <!-- Wave header -->
    <ImageView
        android:id="@+id/waveBackground"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_wave"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/transparent"
        app:navigationIcon="@drawable/ic_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_card"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tanggal"
            android:textColor="#1D3557"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/etTanggal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="17 Juni 2025"
            android:background="@drawable/bg_calendar"
            android:drawableStart="@drawable/ic_calendar"
            android:focusable="false"
            android:padding="10dp"
            android:minHeight="48dp"
            app:layout_constraintTop_toBottomOf="@id/textView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Menu"
            android:textColor="#1D3557"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/etTanggal"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="12dp" />

        <Spinner
            android:id="@+id/spinnerMenu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_calendar"
            android:padding="10dp"
            android:minHeight="48dp"
            app:layout_constraintTop_toBottomOf="@id/textView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tvHpp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HPP (Rp)"
            android:textColor="#1D3557"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/spinnerMenu"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/etHpp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_input_disabled"
            android:enabled="false"
            android:padding="10dp"
            android:minHeight="48dp"
            app:layout_constraintTop_toBottomOf="@id/tvHpp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tvHargaJual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Harga Jual (Rp)"
            android:textColor="#1D3557"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/etHpp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/etHargaJual"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_input_disabled"
            android:enabled="false"
            android:padding="10dp"
            android:minHeight="48dp"
            app:layout_constraintTop_toBottomOf="@id/tvHargaJual"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jumlah Laku"
            android:textColor="#1D3557"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/etHargaJual"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/etJumlahLaku"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Jumlah Laku"
            android:inputType="number"
            android:background="@drawable/bg_calendar"
            android:padding="10dp"
            android:minHeight="48dp"
            app:layout_constraintTop_toBottomOf="@id/textView3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Keterangan (Opsional)"
            android:textColor="#1D3557"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/etJumlahLaku"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/etKeterangan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Keterangan (opsional)"
            android:background="@drawable/bg_calendar"
            android:padding="10dp"
            android:minHeight="48dp"
            app:layout_constraintTop_toBottomOf="@id/textView4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"
            android:layout_marginTop="8dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/etKeterangan"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/btnBatal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="BATAL"
                android:backgroundTint="#4A4A4A"
                android:textColor="@android:color/white"
                android:layout_weight="1"
                android:minHeight="48dp"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnSimpan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="SIMPAN"
                android:backgroundTint="#2E7D32"
                android:textColor="@android:color/white"
                android:layout_weight="1"
                android:minHeight="48dp" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Bottom Navigation -->
    <include
        android:id="@+id/bottom_navigation"
        layout="@layout/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>